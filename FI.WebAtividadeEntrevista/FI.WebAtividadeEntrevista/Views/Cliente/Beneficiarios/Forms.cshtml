<!--CRIAÇÃO DA TELA DE BENEFICIÁRIOS-->
<form id="formCadastro" method="post">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
    <script src="~/Scripts/funcoes.js"></script>
    
    <div class="row">
        <div class="col-md-4">
            
            <div class="form-group">
                <label for="CPF">CPF:</label>
                <input required="required" type="text" class="form-control" id="CPF" name="CPF" placeholder="Ex.: 010.011.111-00" maxlength="14" onblur="validar_CPF(this)">
                <!--Inclusão da máscara de CPF-->
                <script type="text/javascript">
                    $("#CPF").mask("000.000.000-00");
                </script>
            </div>

            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: João" maxlength="50">
            </div>

        </div>
    </div>

    <div class="row">

        <div class="col-lg-12">
            <div class="pull-left">
                <a href="~/Beneficiarios.cshtml">
                    <input type="button" class="btn btn-sm btn-default" id="Benef" name="Benef" value="Beneficiários">
                </a>
            </div>
        </div>
        
        <div class="col-lg-12">
            <div class="pull-right">
                @Html.ActionLink("Fechar", "Index", "Beneficiarios", new { }, new { @class = "btn btn-sm btn-close" })
            </div>
        </div>

    </div>
</form>
